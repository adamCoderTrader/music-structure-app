<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adamoates.musicstructureapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayListActivity"
            android:label="@string/playlist"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/nowPlaying"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".StoreActivity"
            android:label="@string/store"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AlbumsActivity"
            android:label="@string/albums"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ArtistActivity"
            android:label="@string/artist"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PaymentActivity"
            android:label="@string/payment"
            android:parentActivityName=".MainActivity">
        </activity>
    </application>

</manifest>